{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="page-title mb-0">Articles</h1>
    <div class="text-muted small">Tous les articles du blog</div>
  </div>
</div>

<div class="row g-3">
  {% for post in posts %}
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-soft h-100">
        <div class="card-body">

          {# ✅ Image #}
          {% if post.picture %}
            <img src="{{ post.picture }}"
                 class="rounded mb-2"
                 alt="Image de {{ post.title }}"
                 style="height:170px; width:100%; object-fit:cover;">
          {% endif %}

          <div class="d-flex justify-content-between align-items-center mb-1">
            <span class="badge text-bg-light text-dark border">{{ post.category }}</span>
            <span class="text-muted small">
              {{ post.publishedAt ? post.publishedAt|date('d/m/Y') : '' }}
            </span>
          </div>

          <h2 class="h6 mb-2">{{ post.title }}</h2>

          <p class="text-muted small mb-3">
            {{ post.content|striptags|slice(0, 110) }}{% if post.content|length > 110 %}...{% endif %}
          </p>

          <a href="{{ path('blog_show', {id: post.id}) }}" class="btn btn-sm btn-outline-primary">
            Voir l’article
          </a>
        </div>
      </div>
    </div>
  {% else %}
    <div class="col-12">
      <div class="alert alert-info mb-0">
        Aucun article pour le moment.
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
