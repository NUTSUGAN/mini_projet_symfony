{% set r = app.request.attributes.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top shadow-sm" id="mainNavbar">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">
            <i class="bi bi-journal-text me-1"></i> IPSSI Blog
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {% if r == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">
                        Accueil
                    </a>
                </li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle
                            {% if r starts with 'app_category_' or r starts with 'app_post_' or r starts with 'admin_users_' or r starts with 'admin_comment_' %}
                                active
                            {% endif %}"
                           href="#" role="button" data-bs-toggle="dropdown">
                            Admin
                        </a>

                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_category_index') }}">
                                    <i class="bi bi-tags me-1"></i> Catégories
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_post_index') }}">
                                    <i class="bi bi-file-text me-1"></i> Articles
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('admin_comment_index') }}">
                                    <i class="bi bi-chat-left-text me-1"></i> Commentaires
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('admin_users_index') }}">
                                    <i class="bi bi-people me-1"></i> Utilisateurs
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}
            </ul>

            <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                            <span class="avatar-circle">
                                {{ (app.user.firstName|default('U')|slice(0,1) ~ app.user.lastName|default('')|slice(0,1))|upper }}
                            </span>
                            <span class="d-none d-lg-inline">
                                {{ app.user.firstName|default(app.user.email) }}
                            </span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li class="dropdown-item-text small text-muted">
                                {{ app.user.email }}
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-1"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn btn-outline-primary btn-sm" href="{{ path('app_login') }}">
                            Se connecter
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm" href="{{ path('app_register') }}">
                            S’inscrire
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
