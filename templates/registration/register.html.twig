{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">

    <div class="card shadow-soft">
      <div class="card-body p-4 p-md-5">

        <div class="d-flex align-items-center gap-2 mb-3">
          <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center" style="width:40px;height:40px;">
            <i class="bi bi-person-plus"></i>
          </div>
          <div>
            <h1 class="h3 mb-0">Créer un compte</h1>
            <div class="text-muted small">Rejoins le blog et commente les articles</div>
          </div>
        </div>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}

          <div class="mb-3">
            {{ form_row(registrationForm.email, {
              'label': 'Email',
              'attr': {'class': 'form-control', 'placeholder': 'ex: user@gmail.com'}
            }) }}
          </div>

          <div class="row g-2">
            <div class="col-md-6">
              {{ form_row(registrationForm.firstName, {
                'label': 'Prénom',
                'attr': {'class': 'form-control', 'placeholder': 'Prénom'}
              }) }}
            </div>
            <div class="col-md-6">
              {{ form_row(registrationForm.lastName, {
                'label': 'Nom',
                'attr': {'class': 'form-control', 'placeholder': 'Nom'}
              }) }}
            </div>
          </div>

          <div class="mt-3">
            {{ form_row(registrationForm.plainPassword, {
              'label': 'Mot de passe',
              'attr': {'class': 'form-control'}
            }) }}
            <div class="form-text">Minimum 6 caractères.</div>
          </div>

          <div class="mt-3">
            {# ✅ checkbox obligatoire #}
            {{ form_row(registrationForm.agreeTerms) }}
          </div>

          <button type="submit" class="btn btn-primary w-100 mt-3">
            <i class="bi bi-check2-circle me-1"></i>
            S’inscrire
          </button>

          <div class="text-center mt-3 small">
            Déjà un compte ?
            <a href="{{ path('app_login') }}">Se connecter</a>
          </div>

        {{ form_end(registrationForm) }}

      </div>
    </div>

  </div>
</div>
{% endblock %}
