{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">

    <div class="card shadow-soft">
      <div class="card-body p-4 p-md-5">

        <div class="d-flex align-items-center gap-2 mb-3">
          <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center" style="width:40px;height:40px;">
            <i class="bi bi-box-arrow-in-right"></i>
          </div>
          <div>
            <h1 class="h3 mb-0">Connexion</h1>
            <div class="text-muted small">Accède à l’espace membre</div>
          </div>
        </div>

        {% if error %}
          <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
          </div>
        {% endif %}

        {% if app.user %}
          <div class="alert alert-info d-flex justify-content-between align-items-center">
            <div>
              Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
            </div>
            <a class="btn btn-sm btn-outline-dark" href="{{ path('app_logout') }}">
              Logout
            </a>
          </div>
        {% endif %}

        <form method="post" class="mt-2">

          <div class="mb-3">
            <label for="username" class="form-label">Email</label>
            <input
              type="email"
              value="{{ last_username }}"
              name="_username"
              id="username"
              class="form-control"
              autocomplete="email"
              required
              autofocus
              placeholder="ex: admin@gmail.com"
            >
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Mot de passe</label>
            <input
              type="password"
              name="_password"
              id="password"
              class="form-control"
              autocomplete="current-password"
              required
              placeholder="••••••••"
            >
          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          {# ✅ Optionnel (si tu actives remember_me dans security.yaml) #}
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
            <label class="form-check-label" for="_remember_me">
              Se souvenir de moi
            </label>
          </div>

          <button class="btn btn-primary w-100" type="submit">
            <i class="bi bi-check2-circle me-1"></i> Se connecter
          </button>

          <div class="text-center mt-3 small">
            Pas encore de compte ?
            <a href="{{ path('app_register') }}">Créer un compte</a>
          </div>

        </form>

      </div>
    </div>

  </div>
</div>
{% endblock %}
