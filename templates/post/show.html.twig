{% extends 'base.html.twig' %}

{% block title %}Voir l’article{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-start mb-3">
  <div>
    <h1 class="page-title mb-1">Détail de l’article</h1>
    <div class="text-muted small">Informations complètes de l’article</div>
  </div>

  <div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" href="{{ path('app_post_index') }}">
      <i class="bi bi-arrow-left me-1"></i> Retour
    </a>

    <a class="btn btn-primary" href="{{ path('app_post_edit', {'id': post.id}) }}">
      <i class="bi bi-pencil me-1"></i> Modifier
    </a>
  </div>
</div>

<div class="card shadow-soft mb-3">
  <div class="card-body">
    <h2 class="h4 mb-2">{{ post.title }}</h2>

    <div class="d-flex flex-wrap gap-2 mb-3">
      <span class="badge text-bg-dark">Catégorie : {{ post.category }}</span>
      <span class="badge text-bg-secondary">Auteur : {{ post.author ? post.author.email : '-' }}</span>
      <span class="badge text-bg-light text-dark">ID : #{{ post.id }}</span>
    </div>

    <div class="row g-3">
      <div class="col-md-6">
        <div class="text-muted small">Publié le</div>
        <div class="fw-semibold">
          {{ post.publishedAt ? post.publishedAt|date('d/m/Y H:i') : '-' }}
        </div>
      </div>

      <div class="col-md-6">
        <div class="text-muted small">Mis à jour le</div>
        <div class="fw-semibold">
          {{ post.updatedAt ? post.updatedAt|date('d/m/Y H:i') : '-' }}
        </div>
      </div>
    </div>

    <hr class="my-4">

    <div class="text-muted small mb-1">Contenu</div>
    <div class="bg-white border rounded p-3">
      {{ post.content }}
    </div>

    {% if post.picture %}
      <hr class="my-4">
      <div class="text-muted small mb-2">Image (lien)</div>
      <a href="{{ post.picture }}" target="_blank" class="btn btn-sm btn-outline-dark">
        <i class="bi bi-image me-1"></i> Ouvrir l’image
      </a>
    {% endif %}
  </div>
</div>

<div class="d-flex justify-content-between align-items-center">
  <div class="text-muted small">
    Suppression : action irréversible.
  </div>

  {{ include('post/_delete_form.html.twig') }}
</div>
{% endblock %}
